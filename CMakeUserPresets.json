{
   "version": 5,
   "cmakeMinimumRequired": {
      "major": 3,
      "minor": 25,
      "patch": 0
   },
   "configurePresets": [
      {
         "name": "dev-win-msvc",
         "hidden": false,
         "inherits": [ "ci-win-msvc", "dev-mode" ]
      },
      {
         "name": "dev-win-clang",
         "hidden": false,
         "inherits": [ "ci-win-clang", "dev-mode" ],
         "cacheVariables": {
            "CTS_ENABLE_CLANG_TIDY": "ON"
         }
      }
   ],
   "buildPresets": [
      {
         "name": "dev-win-msvc",
         "configurePreset": "dev-win-msvc",
         "jobs": 16
      },
      {
         "name": "dev-win-clang",
         "configurePreset": "dev-win-clang",
         "jobs": 16
      }

   ],
   "testPresets": [
      {
         "name": "dev-win-msvc",
         "configurePreset": "dev-win-msvc",
         "output": {
            "outputOnFailure": true
         },
         "execution": {
            "jobs": 16,
            "noTestsAction": "error"
         }
      },
      {
         "name": "dev-win-clang",
         "configurePreset": "dev-win-clang",
         "output": {
            "outputOnFailure": true
         },
         "execution": {
            "jobs": 16,
            "noTestsAction": "error"
         }
      }
   ]
}
